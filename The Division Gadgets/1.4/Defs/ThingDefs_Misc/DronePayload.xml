<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseGun">
    <defName>TDG_Payload_Cluster</defName>
    <label>cluster bomb</label>
    <description>A salvo of bomblet mines carried by a cluster mine</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/WeaponRanged/Payload</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>500</MarketValue>
      <Mass>1</Mass>
      <RangedWeapon_Cooldown>0.1</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>TDG_ClusterPayload</li>
    </weaponTags>
    <techLevel>Spacer</techLevel>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <verbs>
      <li>
        <verbClass>TheDivisionGadgets.Verb_ScatterOneUse</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Projectile_Bomblet</defaultProjectile>
        <warmupTime>0</warmupTime>
        <forcedMissRadius>7</forcedMissRadius>
        <range>12</range>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <burstShotCount>5</burstShotCount>
        <soundCast>Shot_NeedleGun</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>shell</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.0</cooldownTime>
      </li>
    </tools>
  </ThingDef>

</Defs>